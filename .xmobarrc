Config { overrideRedirect = False
	, font		= "xft:Noto Sans Mono:size=9"
	, bgColor	= "#2f0e44"
	, fgColor	= "#feaadb"
	, position	= TopW L 90
        , lowerOnStart  = True
        , persistent    = True
	, commands	= [ Run Cpu
				[ "-L", "3"
				, "-H", "50"
				, "--high"	, "red"
				, "--normal"	, "green"
				] 10
			  , Run Memory ["--template", "Mem: <usedratio>%"] 10
			  , Run Swap [] 10
			  , Run Date "%d.%m.%Y <fc=#921303>%H:%M</fc>" "date" 10
			  , Run XMonadLog
			  ]
	, sepChar = "%"
	, alignSep = "}{"
	, template = "%XMonadLog% }{ %cpu% | %memory% %swap% | %date% "
